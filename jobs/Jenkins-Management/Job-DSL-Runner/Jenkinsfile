List repos = [
    'home-assistant-config',
    'jenkins'
]

node ('docker') {
    for (String repo in repos) {
        dir (repo) {
            git url: "https://github.com/mfugate1/${repo}.git", branch: 'main'
        }
    }

    jobDsl (
        targets: '**/jobConfig.groovy',
        removedJobAction: 'DELETE',
        lookupStrategy: 'SEED_JOB'
    )
}